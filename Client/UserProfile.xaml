<Page x:Class="Client.UserProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfile"
      Background="White">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <!-- TextBox -->
            <TextBlock Text="User Profiles" FontWeight="Bold"  Width="200" TextAlignment="Center" HorizontalAlignment="Center" Margin="20"/>

            <!-- Horizontal StackPanel for Buttons -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Button x:Name="CreateUserBtn" Content="Create New User" Width="200" Margin="10" Click="CreateUserBtn_Click"/>
                <Button x:Name="RetrieveBtn" Content="Retrieve User" Width="200" Margin="10" Click="RetrieveBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
