<Page x:Class="Client.SystemOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SystemOptions"
      Background="White">

     <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
     <!-- TextBox -->
     <TextBlock Text="Banking System" FontWeight="Bold"  Width="200" TextAlignment="Center" HorizontalAlignment="Center" Margin="20"/>

     <!-- Horizontal StackPanel for Buttons -->
     <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
         <Button x:Name="TransactionBtn" Content="Transaction" Width="200" Margin="10" Click="TransactionBtn_Click"/>
         <Button x:Name="AccountsBtn" Content="Accounts" Width="200" Margin="10" Click="AccountsBtn_Click"/>
         <Button x:Name="UsersBtn" Content="User Profiles" Width="200" Margin="10" Click="UsersBtn_Click"/>
     </StackPanel>
 </StackPanel>
</Page>
